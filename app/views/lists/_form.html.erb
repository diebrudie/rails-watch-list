<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <%= simple_form_for list do |l| %>
          <%= l.input :name %>
          <%= l.input :photo, as: :file %>
          <%= l.button :submit, class: 'btn btn-primary mt-3'%>
        <% end %>
      </div>
    </div>
  </div>
</div>
